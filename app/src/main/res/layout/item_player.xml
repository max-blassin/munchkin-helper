<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_player_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="26dp"
            android:paddingRight="26dp"
            android:paddingLeft="26dp"
            android:paddingStart="26dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/item_player_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="Juan-Carlito"
                style="@style/itemPlayerText"/>

            <ImageView
                android:id="@+id/item_player_level_icon"
                android:src="@drawable/ic_star_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/itemPlayerIcon" />
            <TextView
                android:id="@+id/item_player_level"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/item_player_level_icon"
                app:layout_constraintBottom_toBottomOf="@id/item_player_level_icon"
                app:layout_constraintRight_toRightOf="@id/item_player_level_icon"
                app:layout_constraintLeft_toLeftOf="@id/item_player_level_icon"
                tools:text="10"
                style="@style/itemPlayerStatValue"/>

            <ImageView
                android:id="@+id/item_player_power_icon"
                android:src="@drawable/ic_swords_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/item_player_level_icon"
                style="@style/itemPlayerIcon"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/item_player_power"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/item_player_power_icon"
                app:layout_constraintBottom_toBottomOf="@id/item_player_power_icon"
                app:layout_constraintRight_toRightOf="@id/item_player_power_icon"
                app:layout_constraintLeft_toLeftOf="@id/item_player_power_icon"
                tools:text="99"
                style="@style/itemPlayerStatValue"/>

            <ImageView
                android:id="@+id/item_player_stuff_icon"
                android:src="@drawable/ic_helmet_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/item_player_power_icon"
                style="@style/itemPlayerIcon"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/item_player_stuff"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/item_player_stuff_icon"
                app:layout_constraintBottom_toBottomOf="@id/item_player_stuff_icon"
                app:layout_constraintRight_toRightOf="@id/item_player_stuff_icon"
                app:layout_constraintLeft_toLeftOf="@id/item_player_stuff_icon"
                tools:text="99"
                style="@style/itemPlayerStatValue"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>